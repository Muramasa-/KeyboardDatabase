{% extends "layout.jinja" %}
{% block sidebar %}
    <p class='text-muted'>A list of fancy keyboards</p>
    <li class="list-group-item list-group-item-light">Vintage</li>
    <li class="list-group-item list-group-item-light">Customs</li>
    <li class="list-group-item list-group-item-light">OEM</li>
{% endblock sidebar %}
{% block content %}
    {% for i in items %}
        <div class="content-section">
            <a class="mr-2" href="#">{{ i.brand }}</a><small>{{ i.model }}</small>
            <hr class="divider"/>
            <h2><a class="article-title" href="{{ url_for('item', item_id=i.id) }}">{{ i.name }}</a></h2>
            <p>{{ i.name }}</p>
        </div>
    {% endfor %}
{% endblock content %}