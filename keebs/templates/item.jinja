{% extends "layout.jinja" %}
{% block content %}
    <div class="content-section">
        <a class="mr-2" href="{{ url_for('inventory', brand=item.brand) }}">{{ item.brand }}</a><small>{{ item.model }}</small>
        <hr class="divider"/>
        <h2 class="article-title">{{ item.name }}</h2>
        <p>{{ item.desc }}</p>
        <img src="data:;base64,{{item.img_large}}" alt="{{item.model}} Keyboard">
        <a href="{{ url_for('update', item_id=item.id) }}">Update</a>
        {{ render_form(cart_form) }}
    </div>
{% endblock content %}