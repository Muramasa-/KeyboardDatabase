<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='main.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='main.css') }}">
    <script type="text/javascript" src="{{ url_for('static', filename='main.js') }}"></script>
    <title>{% if title %} Keebs - {{ title}} {% else %} Keebs {% endif %}</title>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand mr-4" href="{{ url_for('home') }}">Keebs</a>
            <div class="navbar-nav mr-auto">
                <a class="nav-item nav-link" href="{{ url_for('keyboards') }}">Keyboards</a>
                <a class="nav-item nav-link" href="{{ url_for('keysets') }}">Keysets</a>
                <a class="nav-item nav-link" href="{{ url_for('about') }}">About</a>
            </div>
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="{{ url_for('insert') }}">Insert</a>
                <a class="nav-item nav-link" href="{{ url_for('search') }}">Search</a>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="content-section">
                    <h3>The Sidebar</h3>
                    <ul class="list-group">
                        {% block sidebar %}
                        {% endblock sidebar %}
                    </ul>
                </div>
            </div>
            <div class="col-md-9">
                {% with messages = get_flashed_messages(with_categories=true) %}
                {% if messages %}
                    {% for category, message in messages %}
                        <div class="alert alert-{{ category }}">{{ message }}</div>
                    {% endfor %}
                    {% endif %}
                {% endwith %}
                {% block content %}
                {% endblock content %}
            </div>
        </div>
    </div>
</body>
</html>